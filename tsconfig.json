{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "commonjs",                   
    "rootDir": "./src",                   
    "outDir": "./build/js", 
    "removeComments": true,                                
    "noEmitOnError": true,                            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
